<h1>Listing items</h1>

<table>
  <tr>
    <th>Store Chain</th>
    <th>Name</th>
    <th>Category</th>
    <th>Brand</th>
    <th>Quantity</th>
    <th>Description</th>
    <th>Regular price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.store_chain_name %></td>
    <td><%= item.name %></td>
    <td><%= item.category %></td>
    <td><%= item.brand %></td>
    <td><%= item.quantity %></td>
    <td><%= item.description %></td>
    <td><%= item.regular_price %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

